<Page x:Class="PreFinal.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PreFinal.Pages" xmlns:prefinal="clr-namespace:PreFinal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Border
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <Button
                    Content="Просмотреть инвентарь"
                    Margin="5"
                    Style="{StaticResource StartPageBtn}"
                    Name="ViewInvBtn"
                    Click="Button_Click"/>
                <Button 
                    Content="Инвентаризация"
                    Margin="5"
                    Style="{StaticResource StartPageBtn}"
                    Name="NnventorizationBtn"
                    Click="NnventorizationBtn_Click"/>
                <Button 
                    Content="Найти инвентарь"
                    Margin="5"
                    Style="{StaticResource StartPageBtn}"
                    Name="FindInventory"
                    Click="FindInventory_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
